<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="178dp"
    android:paddingStart="10dp"
    android:background="@drawable/mine_shape_goods_detail_dialog"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mine_tv_goods_detail_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="18dp"
        android:lines="1"
        android:text="确认要用100邮票兑换PM名片吗？"
        android:textAppearance="@style/mine_goods_detail_dialog_ps" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="24dp">

        <Button
            android:id="@+id/mine_btn_goods_detail_cancel"
            android:layout_width="93dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/mine_shape_goods_detail_cancel"
            android:text="取消"
            android:textAppearance="@style/mine_goods_detail_dialog_cancel" />

        <Button
            android:id="@+id/mine_btn_goods_detail_sure"
            android:layout_marginLeft="9dp"
            android:layout_width="93dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="确定"
            android:background="@drawable/mine_selector_decoration_detail_btn"
            android:textAppearance="@style/mine_goods_detail_dialog_sure"
            android:layout_height="40dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>